{
  "_comment": "This file is generated. Please edit .homeycompose/app.json instead.",
  "id": "nl.inversion.fullykioskbrowser",
  "version": "1.0.0",
  "compatibility": ">=5.0.0",
  "sdk": 3,
  "name": {
    "en": "Fully Kiosk Browser"
  },
  "description": {
    "en": "Control your Fully Kiosk Browser on your Android tablet or phone from Homey."
  },
  "category": [
    "tools"
  ],
  "permissions": [],
  "images": {
    "small": "/assets/images/small.png",
    "large": "/assets/images/large.png",
    "xlarge": "/assets/images/xlarge.png"
  },
  "author": {
    "name": "Robin van Kekem",
    "email": "roady1979@gmail.com"
  },
  "flow": {
    "actions": [
      {
        "title": {
          "en": "Set kiosk lock"
        },
        "titleFormatted": {
          "en": "[[mode]] kiosk mode"
        },
        "hint": {
          "en": "This locks the device into kiosk mode. You'll need to set up an gesture or PIN on the device."
        },
        "args": [
          {
            "type": "dropdown",
            "name": "mode",
            "values": [
              {
                "id": "lock",
                "label": {
                  "en": "lock"
                }
              },
              {
                "id": "unlock",
                "label": {
                  "en": "unlock"
                }
              }
            ]
          }
        ],
        "id": "set-kiosk-lock"
      },
      {
        "title": {
          "en": "Set maintenance lock"
        },
        "titleFormatted": {
          "en": "[[mode]] maintenance mode"
        },
        "hint": {
          "en": "This locks the device into maintenance mode. It is not possible to use the touchscreen until unlocked."
        },
        "args": [
          {
            "type": "dropdown",
            "name": "mode",
            "values": [
              {
                "id": "lock",
                "label": {
                  "en": "lock"
                }
              },
              {
                "id": "unlock",
                "label": {
                  "en": "unlock"
                }
              }
            ]
          }
        ],
        "id": "set-maintenance-lock"
      },
      {
        "title": {
          "en": "Set screen brightness"
        },
        "titleFormatted": {
          "en": "Set screen brightness to [[brightness]]"
        },
        "hint": {
          "en": "This will set the screen brightness"
        },
        "args": [
          {
            "type": "range",
            "name": "brightness",
            "title": {
              "en": "Brightness"
            },
            "min": 0,
            "max": 250,
            "step": 25,
            "label": "%",
            "labelMultiplier": 0.4,
            "labelDecimals": 0
          }
        ],
        "id": "set-screen-brightness"
      },
      {
        "title": {
          "en": "Set screen state",
          "nl": "Schermstatus instellen"
        },
        "titleFormatted": {
          "en": "Set the screen [[onOff]]",
          "nl": "Zet het scherm [[onOff]]"
        },
        "hint": {
          "en": "This will set the screen to on or off. Motion and sound detection (if enabled) will turn the screen back on again.",
          "nl": "Dit zet het scherm aan of uit. Beweging- en geluidsdetectie (indien ingeschakeld) zal het scherm weer inschakelen."
        },
        "args": [
          {
            "type": "dropdown",
            "name": "onOff",
            "values": [
              {
                "id": "on",
                "label": {
                  "en": "on",
                  "nl": "aan"
                }
              },
              {
                "id": "off",
                "label": {
                  "en": "off",
                  "nl": "uit"
                }
              }
            ]
          }
        ],
        "id": "set-screen-state"
      }
    ]
  },
  "drivers": [
    {
      "name": {
        "en": "Fully Kiosk Browser"
      },
      "class": "other",
      "capabilities": [
        "measure_battery",
        "batteryTemperature",
        "alarm_battery",
        "screenOn",
        "measure_pressure",
        "screenBrightness",
        "measure_luminance",
        "hasLicense",
        "isPlugged",
        "isMobileDataEnabled",
        "isInScreensaver",
        "kioskLocked"
      ],
      "energy": {
        "batteries": [
          "INTERNAL"
        ]
      },
      "capabilitiesOptions": {
        "button.toggleScreen": {
          "title": {
            "en": "Toggle screen"
          },
          "desc": {
            "en": "Toggle the screen of the device on and off"
          }
        }
      },
      "images": {
        "small": "/drivers/fully-kiosk-browser/assets/images/small.png",
        "large": "/drivers/fully-kiosk-browser/assets/images/large.png",
        "xlarge": "/drivers/fully-kiosk-browser/assets/images/xlarge.png"
      },
      "pair": [
        {
          "id": "api"
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          },
          "options": {
            "singular": true
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "id": "fully-kiosk-browser",
      "settings": [
        {
          "id": "password",
          "type": "password",
          "label": {
            "en": "Password"
          },
          "value": "Secret",
          "hint": {
            "en": "The password of the Fully Kiosk Browser app"
          }
        },
        {
          "id": "ip4",
          "type": "text",
          "label": {
            "en": "IP address"
          },
          "value": "192.168.0.50",
          "hint": {
            "en": "IP address of the device running Fully Kiosk Browser"
          }
        },
        {
          "id": "port",
          "type": "number",
          "label": {
            "en": "Port"
          },
          "value": 2323,
          "min": 1,
          "max": 65535
        },
        {
          "id": "update_interval",
          "type": "number",
          "label": {
            "en": "Update interval"
          },
          "value": 5,
          "min": 1,
          "max": 15,
          "units": {
            "en": "minutes"
          }
        }
      ]
    }
  ],
  "capabilities": {
    "batteryTemperature": {
      "type": "number",
      "title": {
        "en": "Battery temperature"
      },
      "uiComponent": "sensor",
      "getable": true,
      "setable": false,
      "units": {
        "en": "Â°C"
      },
      "insights": true,
      "icon": "/assets/images/temperature.svg"
    },
    "hasLicense": {
      "type": "boolean",
      "title": {
        "en": "Is licensed"
      },
      "uiComponent": "sensor",
      "getable": true,
      "setable": false,
      "insights": false,
      "icon": "/assets/images/license.svg"
    },
    "isInScreensaver": {
      "type": "boolean",
      "title": {
        "en": "Is in screensaver"
      },
      "uiComponent": "sensor",
      "getable": true,
      "setable": false,
      "insights": false,
      "icon": "/assets/images/screensaver.svg"
    },
    "isMobileDataEnabled": {
      "type": "boolean",
      "title": {
        "en": "Is mobile data enabled"
      },
      "uiComponent": "sensor",
      "getable": true,
      "setable": false,
      "insights": false,
      "icon": "/assets/images/mobile-signal.svg"
    },
    "isPlugged": {
      "type": "boolean",
      "title": {
        "en": "Is plugged in"
      },
      "uiComponent": "sensor",
      "getable": true,
      "setable": false,
      "insights": false,
      "icon": "/assets/images/power-plug.svg"
    },
    "kioskLocked": {
      "type": "boolean",
      "title": {
        "en": "Kiosk locked"
      },
      "uiComponent": "sensor",
      "getable": true,
      "setable": false,
      "insights": false,
      "icon": "/assets/images/kioskLocked.svg"
    },
    "screenBrightness": {
      "type": "number",
      "title": {
        "en": "Screen brightness"
      },
      "uiComponent": "slider",
      "getable": true,
      "setable": true,
      "units": {
        "en": "nits"
      },
      "min": 0,
      "max": 10,
      "step": 1
    },
    "screenOn": {
      "type": "boolean",
      "title": {
        "en": "Screen on"
      },
      "uiComponent": "toggle",
      "getable": true,
      "setable": true,
      "uiQuickAction": true
    }
  }
}